# Environment Configuration for Docker Deployment
NODE_ENV=production

# Database Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_mongo_password
MONGO_DATABASE=quantummint

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password

# RabbitMQ Configuration
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=your_secure_rabbitmq_password

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Encryption
BCRYPT_ROUNDS=12

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Payment Provider Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

ORANGE_MONEY_API_KEY=your_orange_money_api_key
ORANGE_MONEY_SECRET=your_orange_money_secret

AFRIMONEY_API_KEY=your_afrimoney_api_key
AFRIMONEY_SECRET=your_afrimoney_secret

# File Upload Configuration
FILE_UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Compliance API Configuration (Optional)
SANCTIONS_API_URL=https://api.sanctions-check.com
PEP_API_URL=https://api.pep-check.com
ADVERSE_MEDIA_API_URL=https://api.adverse-media.com
WATCHLIST_API_URL=https://api.watchlist-check.com

# Logging
LOG_LEVEL=info

# Frontend Configuration
REACT_APP_API_URL=http://localhost:3000
REACT_APP_ENVIRONMENT=production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
