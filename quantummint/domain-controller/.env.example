# Domain Controller Configuration

# Domain Settings
DOMAIN_NAME=quantummint.local
NETBIOS_NAME=QUANTUMMINT
FOREST_NAME=quantummint.local
FOREST_LEVEL=2019
DOMAIN_LEVEL=2019

# LDAP Configuration
LDAP_PORT=389
LDAPS_PORT=636
LDAP_BASE_DN=dc=quantummint,dc=local
LDAP_BIND_DN=cn=Administrator,cn=Users,dc=quantummint,dc=local
LDAP_MAX_CONNECTIONS=1000
LDAP_ENABLE_TLS=true

# Kerberos Configuration
KERBEROS_REALM=QUANTUMMINT.LOCAL
KERBEROS_PORT=88
KERBEROS_ADMIN_PORT=749
KERBEROS_PASSWORD_PORT=464
KERBEROS_TICKET_LIFETIME=10h
KERBEROS_RENEWABLE_LIFETIME=7d

# DNS Configuration
DNS_PORT=53
DNS_FORWARDERS=8.8.8.8,8.8.4.4
DNS_ENABLE_RECURSION=true

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/quantummint-domain
REDIS_URI=redis://localhost:6379

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ENCRYPTION_KEY=your-32-character-encryption-key-here
PASSWORD_MIN_LENGTH=8
PASSWORD_COMPLEXITY=true
PASSWORD_HISTORY=12
ACCOUNT_LOCKOUT_THRESHOLD=5
ACCOUNT_LOCKOUT_DURATION=30m

# Audit Configuration
AUDIT_ENABLED=true
AUDIT_RETENTION_DAYS=365
AUDIT_LOG_LEVEL=info
AUDIT_ENABLED_EVENTS=all

# Web Interface Configuration
WEB_PORT=8080
WEB_ENABLE_SSL=false
WEB_SSL_CERT_PATH=
WEB_SSL_KEY_PATH=

# Replication Configuration
REPLICATION_ENABLED=true
REPLICATION_INTERVAL=15m
REPLICATION_RETRY_ATTEMPTS=3
REPLICATION_RETRY_DELAY=5m

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/domain-controller.log
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# QuantumMint Integration
QUANTUMMINT_API_GATEWAY=http://localhost:3000
QUANTUMMINT_AUTH_SERVICE=http://localhost:3001
QUANTUMMINT_MAIL_SERVER=http://localhost:3002

# Development/Production
NODE_ENV=development
