# Database Configuration
MONGODB_URI=mongodb://mongodb:27017/quantummint_prod
REDIS_URL=redis://redis:6379
RABBITMQ_URL=amqp://rabbitmq:5672

# JWT Configuration
JWT_SECRET=your_production_jwt_secret_key_here
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your_production_refresh_token_secret_here
REFRESH_TOKEN_EXPIRES_IN=7d

# API Gateway Configuration
API_GATEWAY_PORT=3000
API_GATEWAY_HOST=0.0.0.0

# Service Ports
AUTH_SERVICE_PORT=3001
MONEY_GENERATION_PORT=3002
TRANSACTION_SERVICE_PORT=3003
PAYMENT_INTEGRATION_PORT=3004
KYC_SERVICE_PORT=3005
FRONTEND_PORT=3006

# Service URLs (Docker internal network)
AUTH_SERVICE_URL=http://auth-service:3001
MONEY_GENERATION_URL=http://money-generation:3002
TRANSACTION_SERVICE_URL=http://transaction-service:3003
PAYMENT_INTEGRATION_URL=http://payment-integration:3004
KYC_SERVICE_URL=http://kyc-service:3005

# Two-Factor Authentication
TOTP_SECRET=your_totp_secret_here
SMS_PROVIDER_API_KEY=your_sms_provider_api_key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@quantummint.com
FRONTEND_URL=https://your-domain.com

# Payment Provider Configuration
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

ORANGE_MONEY_API_KEY=your_production_orange_money_api_key
ORANGE_MONEY_SECRET=your_production_orange_money_secret

AFRIMONEY_API_KEY=your_production_afrimoney_api_key
AFRIMONEY_SECRET=your_production_afrimoney_secret

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_SALT_ROUNDS=12

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Environment
NODE_ENV=production
